{
  "extends": [
    "tslint:latest",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "rules": {
    "interface-name": [
      true,
      "never-prefix"
    ],
    "jsx-boolean-value": [
      true,
      "never"
    ],
    "no-submodule-imports": [
      true,
      "redux-saga/effects",
      "@material-ui/core/TextField"
    ],
    "prettier": [
      true,
      ".prettierrc"
    ]
  },
  "linterOptions": {
    "exclude": [
      "src/serviceWorker.ts"
    ]
  }
}
